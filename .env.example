# ==============================================
# ARTICLES API - Environment Variables
# ==============================================

# ------------------------------------------
# Application Configuration
# ------------------------------------------
NODE_ENV=development
PORT=3000

# ------------------------------------------
# Database Configuration
# ------------------------------------------
# PostgreSQL Connection String
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/artigos?schema=public"

# ------------------------------------------
# JWT Authentication
# ------------------------------------------
# Secret key for JWT tokens (CHANGE IN PRODUCTION!)
# Must be at least 32 characters
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="1h"

# ------------------------------------------
# Rate Limiting
# ------------------------------------------
# Time window in milliseconds
THROTTLE_TTL=60000
# Max requests per time window
THROTTLE_LIMIT=10

# ------------------------------------------
# Logging
# ------------------------------------------
# Log levels: error | warn | info | debug
LOG_LEVEL=info

# ------------------------------------------
# Redis (Optional - for caching)
# ------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ------------------------------------------
# Swagger Documentation
# ------------------------------------------
# Enable/disable Swagger UI
SWAGGER_ENABLED=true

# ==============================================
# NOTES:
# ==============================================
# 1. Copy this file to .env and fill in your values
# 2. NEVER commit .env file to version control
# 3. Change JWT_SECRET in production
# 4. Use strong passwords for production database
# 5. Enable proper logging in production (JSON format)
# ==============================================
