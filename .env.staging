# Staging Environment Configuration
NODE_ENV=staging
PORT=3000

# Database
DATABASE_URL="postgresql://USER:PASSWORD@staging-host:5432/artigos?schema=public"

# JWT
JWT_SECRET="staging-secret-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="2h"

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=50

# Logging
LOG_LEVEL=info

# Redis
REDIS_HOST=staging-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=staging-redis-password

# Swagger (enabled in staging for testing)
SWAGGER_ENABLED=true
